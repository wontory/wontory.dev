---
import { cn } from "~/utils/cn";

interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  {href}
  class={cn(
    "font-normal text-primary underline decoration-primary/30 underline-offset-4 transition-colors duration-300 hover:text-foreground hover:decoration-foreground/50",
    className,
  )}
>
  <slot />
</a>
