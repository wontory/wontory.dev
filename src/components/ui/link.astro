---
import { cn } from "~/utils/cn";

interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---

<a
  {href}
  class={cn(
    "hover:decoration-primary/50 hover:text-primary font-normal underline decoration-foreground/30 underline-offset-4 transition-colors duration-300",
    className,
  )}
>
  <slot />
</a>
